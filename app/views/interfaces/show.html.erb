<%- model_class = Interface -%>
<div class="page-header">
  <h1><%=t '.title', :default => Interface %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:read) %></dt>
      <dd><pre class="prettyprint"><%= @interface.read %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user) %></dt>
      <dd><pre class="prettyprint"><%= @interface.user %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:book) %></dt>
      <dd><pre class="prettyprint"><%= @interface.book %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              interfaces_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_interface_path(@interface), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              interface_path(@interface),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

